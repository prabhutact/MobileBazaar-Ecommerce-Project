      </div>
      <div>

        <a  class="btn btn-primary btn-sm rounded" href="/admin/addCategory">Create New Category</a>
      </div>
    </div>
    <div class="card mb-4">
      
      
      <div class="card-body">

        
            {{#each category}}
            <article class="itemlist">
                <div class="row align-items-center">
                    <div class="col col-check flex-grow-0">
