    <main class="main-wrap">
       
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Users list</h2>
                
            </div>
            <div class="card mb-4">                
                <div class="card-body ">
                    <div class="table-responsive ">
                        <table class="table table-hover ">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Registered</th>
                                    <th > Action </th>
                                </tr>
                            </thead>
                            {{#each users}}
                            <tbody>
                                <tr>
                                    <td width="30%">
                                        <a href="#" class="itemside">
                                            <div class="left mt-5">
                                                <img src="/assets/imgs/products/{{this.imageUrl.[0]}}" class="img-sm img-avatar" alt="Userpic" onerror="src='/assetsAdmin/imgs/people/avatar1.png'">
                                            </div>
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title">{{name}}</h6>
                                                <small class="text-muted">{{mobile}}</small>
                                            </div>
                                        </a>
                                    </td>
                                    <td width="20%">{{email}}</td>
                                    {{#if isBlocked}}
                                    <td width="20%"><span class="badge rounded-pill alert-danger">Blocked</span></td>

                                    {{else}}
                                    <td width="20%"><span class="badge rounded-pill alert-success">Active</span></td>
                                    {{/if}}
                                    
                                    <td width="20%">08.07.2020</td>
                                    <td width="20%">
                                        {{#if this.isBlocked}}
                                        <a id="blockuser" data-user-id="{{this._id}}" class="btn btn-sm font-sm btn-primary flex-end" href="/admin/blockuser"
                                            >
                                            Unblock
                                        </a>
                                        {{else}}
                                        <a id="blockuser" data-user-id="{{this._id}}" class="btn btn-sm font-sm btn-primary" href="/admin/blockuser"
                                           >
                                            Block
                                        </a>
                                        {{/if}}
                                    </td>
                                </tr>

                            </tbody>
                            {{/each}}
                        </table> 
                    </div>
                </div>
            </div> 
            <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    {{#each pages}}
                    <li class="page-item active"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </nav>
        </div>
        </section> 
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
