                                <div class="m-2">
<button onclick="return Validation(event);" class="btn btn-primary">Save</button>

                                </div>
                                <div class="m-2">
                                    <a href="/admin/product" type="button" class="btn btn-primary" id="backbutton">Back</a>
                                </div>
                            </div> 





