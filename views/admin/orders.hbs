<script>
    function submitform(form) {
        event.preventDefault()
        
        Swal.fire({
            title: "Are you sure?",
            text: "Do you want to change the order status??",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#088178",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, change it!"
        }).then((isOkay) => {
            if (isOkay) {
                form.submit()
            }
        });
    }



</script>