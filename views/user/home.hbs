 <main class="main">

    <!-- Main Banner Start -->

    <section class="home-slider position-relative pt-50">
      <div class="hero-slider-1 dot-style-1 dot-style-1-position-1">

        <!-- Banner Slider 1 Start -->

        <div class="single-hero-slider single-animation-wrap">
          <div class="container">
            <div class="row align-items-center slider-animated-1">
              <div class="col-lg-5 col-md-6">
                <div class="hero-slider-content-2">
                  <h4 class="animated">Best offer</h4>
                  <h2 class="animated fw-900">Super value deals</h2>
                  <h1 class="animated fw-900 text-brand">On all products</h1>
                  <p class="animated">Save more with coupons & up to 70% off</p>
                  <a
                    class="animated btn btn-brush btn-brush-3"
                    href="shop-product-right.html"
                  > Shop Now </a>
                </div>
              </div>
              <div class="col-lg-7 col-md-6">
                <div class="single-slider-img single-slider-img-1">
                  <img
                    class="animated slider-1-1"
                    src="assets/Banner1.png"
                    alt=""
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Banner Slider 1 End -->

        <!-- Banner Slider 2 Start -->

        <div class="single-hero-slider single-animation-wrap">
          <div class="container">
            <div class="row align-items-center slider-animated-1">
              <div class="col-lg-5 col-md-6">
                <div class="hero-slider-content-2">
                  <h4 class="animated">Hot promotions</h4>
                  <h2 class="animated fw-900">Introducing New Arrivals</h2>
                  <h1 class="animated fw-900 text-7">Great Collection</h1>
                  <p class="animated">Save more with coupons & up to 20% off</p>
                  <a
                    class="animated btn btn-brush btn-brush-2"
                    href="shop-product-right.html"
                  > Discover Now </a>
                </div>
              </div>
              <div class="col-lg-7 col-md-6">
                <div class="single-slider-img single-slider-img-1">
                  <img
                    class="animated slider-1-2"
                    src="assets/Banner2.png"
                    alt=""
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Banner Slider 2 End -->

        <!-- Banner Slider 3 Start -->

        <div class="single-hero-slider single-animation-wrap">
          <div class="container">
            <div class="row align-items-center slider-animated-1">
              <div class="col-lg-5 col-md-6">
                <div class="hero-slider-content-2">
                  <h4 class="animated">Upcoming Offer</h4>
                  <h2 class="animated fw-900">Big Deals From</h2>
                  <h1 class="animated fw-900 text-8">Android Phones</h1>
                  <p class="animated">Samsung, Vivo, Realme, Oppo...</p>
                  <a
                    class="animated btn btn-brush btn-brush-1"
                    href="shop-product-right.html"
                  > Shop Now </a>
                </div>
              </div>
              <div class="col-lg-7 col-md-6">
                <div class="single-slider-img single-slider-img-1">
                  <img
                    class="animated slider-1-3"
                    src="assets/Banner3.png"
                    alt=""
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Banner Slider 3 End -->

      </div>
      <div class="slider-arrow hero-slider-1-arrow"></div>
    </section>

    <!-- Main Banner End -->

    <!-- Product NavBar & Product Grid Start -->

    <section class="product-tabs section-padding position-relative wow fadeIn animated">
      <div class="bg-square"></div>
      <div class="container">

        <!-- Product Nav Bar Start -->

        <div class="tab-header">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="nav-tab-one" data-bs-toggle="tab" data-bs-target="#tab-one" type="button" role="tab" aria-controls="tab-one" aria-selected="true">Popular</button>
            </li>
            </ul>
          <a href="/shop" class="view-more d-none d-md-flex">View More<i class="fi-rs-angle-double-small-right"></i></a>
        </div>
        
        <!-- Product Nav Bar End -->

        <!-- Product Grid Start -->

        <div class="tab-content wow fadeIn animated" id="myTabContent">
          <div
            class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
            <div class="row product-grid-4">
              {{#each Products}}
              <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                <div class="product-cart-wrap mb-30">
                  <div class="product-img-action-wrap">
                    <div class="product-img product-img-zoom">
                      <a href="/productDetails/{{this._id}}">
                        <img class="default-img" src="assets/imgs/products/{{this.imageUrl.[0]}}" alt=""/>
                        <img class="hover-img" src="assets/imgs/products/{{this.imageUrl.[1]}}" alt=""/>
                      </a>
                    </div>
                    {{!-- <div class="product-action-1">
                      <a aria-label="Add To Wishlist" class="action-btn hover-up" href="/productDetails/{{this._id}}"><i class="fi-rs-heart"></i></a>
                    </div> --}}
                    <div
                      class="product-badges product-badges-position product-badges-mrg">
                      <span class="hot">Hot</span>
                    </div>
                  </div>
                  <div class="product-content-wrap">
                    <div class="product-category">
                      <a >{{this.category.category}}</a>
                    </div>
                    <h2><a href="shop-product-right.html">{{this.name}}</a></h2>
                    <div class="rating-result" title="90%">
                      <span>
                        <span>90%</span>
                      </span>
                    </div>
                    <div class="product-price">
                      <span>{{ product.discountedPrice}} </span>
                      <ins><span class="old-price font-md ml-15">₹{{price}}</span></ins>
                    </div>
                    <div class="product-action-1 show">
                      <a aria-label="Add To Cart" class="action-btn hover-up" href="shop-cart.html"><i class="fi-rs-shopping-bag-add"></i></a>
                    </div>
                  </div>
                </div>
              </div>              
              {{/each}}
            </div>
          </div>
          <!-- Product Grid End --> 
        </div>
      </div>
    </section>
    <!-- Product NavBar & Product Grid End -->

    <!-- Banner 2 Start -->
    <section class="banner-2 section-padding pb-0">
      <div class="container">
        <div class="banner-img banner-big wow fadeIn animated f-none">
          <img src="assets/2nd Banner2.jpg" alt="" />
          <div class="banner-text d-md-block d-none">
            <h4 class="mb-15 mt-40 text-brand">New Deals Everyday</h4>
            <h1 class="fw-600 mb-20">We're an sale
              <br />Grab the opportunity</h1>
            <a href="shop-grid-right.html" class="btn">Learn More
              <i class="fi-rs-arrow-right"></i></a>
          </div>
        </div>
      </div>
    </section>
    <!-- Banner 2 End -->

    <!-- Category Section Start -->
    <section class="popular-categories section-padding mt-15 mb-25">
      <div class="container wow fadeIn animated">
        <h3 class="section-title mb-20"><span>All Categories</span></h3>

        <div class="carausel-6-columns-cover position-relative">
          <div
            class="slider-arrow slider-arrow-2 carausel-6-columns-arrow"
            id="carausel-6-columns-arrows"
          ></div>
          <div class="carausel-6-columns" id="carausel-6-columns">
            {{#each category}}
              <div class="card-1">
                <figure class="img-hover-scale overflow-hidden">
                  <a ><img
                      src="/assets/imgs/products/{{imageUrl}}"
                      alt=""
                    /></a>
                </figure>
                <h5><a >{{this.category}}</a></h5>
              </div>
            {{/each}}
          </div>
        </div>

      </div>
    </section>
    <!-- Category Section End -->

  </main>

